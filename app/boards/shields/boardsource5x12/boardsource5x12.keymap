		&none		&none		&none		&none	&kp ESC	&kp ESC	&trans	&trans	&none	&none		&none		&none	
            >;
        };

        sym_layer {
            label = "Sym";
            bindings = <
	    	&none		&none		&none		&none		&none		&none		&none		&none		&none		&none		&none		&none	
		&kp LS(N1)	&kp LS(N2)	&kp LS(N3)	&kp LS(N4)	&kp LS(N5)	&none		&none		&kp LS(N6)	&kp LS(N7)	&kp LS(N8)	&kp LS(N9)	&kp LS(N0)
		&kp LS(TAB)	&trans		&trans		&trans		&trans		&none		&none		&trans		&trans		&kp LS(LBKT)	&kp LS(RBKT)	&kp LS(SEMI)
		&kp LS(GRAVE)	&trans		&trans		&none		&none		&none		&none		&trans		&trans		&kp LS(MINUS)	&kp LS(EQUAL)	&kp LS(BSLH)
		&none		&none		&none		&none		&kp ESC		&kp ESC		&none		&none		&none		&trans		&trans 		&none
            >;
