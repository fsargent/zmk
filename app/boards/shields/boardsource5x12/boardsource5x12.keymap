	combo_undo{timeout-ms=<25>;
		key-positions=<44 45>;
		bindings=<&kp LG(Z)>;
	};

	combo_redo{timeout-ms=<25>;
		key-positions=<46 47>;
		bindings=<&kp LS(LG(Z))>;
	};

	combo_cut{
		timeout-ms=<25>;
		key-positions=<36 37>;
		bindings=<&kp LG(X)>;
	};combo_copy{
		timeout-ms=<25>;
		key-positions=<37 38>;
		bindings=<&kp LG(C)>;
